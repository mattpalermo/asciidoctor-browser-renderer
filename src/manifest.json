{
  "manifest_version": 2,
  "name": "Asciidoctor browser renderer",
  "description": "Read asciidoc documents in a web browser using asciidoctor",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches":[
        "*://*/*.ad",
        "*://*/*.ad?*",
        "*://*/*.ad.*",
        "*://*/*.adoc",
        "*://*/*.adoc?*",
        "*://*/*.adoc.*",
        "*://*/*.asc",
        "*://*/*.asc?*",
        "*://*/*.asc.*",
        "*://*/*.asciidoc",
        "*://*/*.asciidoc?*",
        "*://*/*.asciidoc.*",
        "file://*/*.ad",
        "file://*/*.ad?*",
        "file://*/*.ad.*",
        "file://*/*.adoc",
        "file://*/*.adoc?*",
        "file://*/*.adoc.*",
        "file://*/*.asc",
        "file://*/*.asc?*",
        "file://*/*.asc.*",
        "file://*/*.asciidoc",
        "file://*/*.asciidoc?*",
        "file://*/*.asciidoc.*"
      ],
      "js":[
        "vendor/asciidoctor.js",
        "main.js"
      ],
      "css":[
        "vendor/asciidoctor.css"
      ]
    }
  ],
  "permissions":[
    "*://*/*.ad",
    "*://*/*.ad?*",
    "*://*/*.ad.*",
    "*://*/*.adoc",
    "*://*/*.adoc?*",
    "*://*/*.adoc.*",
    "*://*/*.asc",
    "*://*/*.asc?*",
    "*://*/*.asc.*",
    "*://*/*.asciidoc",
    "*://*/*.asciidoc?*",
    "*://*/*.asciidoc.*"
  ]
}
